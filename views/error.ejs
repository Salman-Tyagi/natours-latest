<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://fonts.googleapis.com/css?family=Lato:300,300i,700"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/css/style.css" />
    <link rel="shortcut icon" type="image/png" href="/img/favicon.png" />

    <title>Natours | Page not found</title>
  </head>

  <body>
    <!-- Header -->
    <header class="header">
      <nav class="nav nav--tours">
        <a href="/" class="nav__el">All tours</a>
      </nav>
      <div class="header__logo">
        <img src="/img/logo-white.png" alt="Natours logo" />
      </div>
      <nav class="nav nav--user">
        <% if (user) { %>
        <a href="#" class="nav__el nav__el--logout">Log out</a>
        <a href="/myAccount" class="nav__el">
          <img
            src="/img/users/<%= user.photo %>"
            alt="User photo"
            class="nav__user-img"
          />
          <span><%= user.name.split(' ')[0] %></span>
        </a>
        <% } else { %>
        <a href="/login" class="nav__el">Log in</a>
        <a class="nav__el nav__el--cta">Sign up</a>
        <% } %>
      </nav>
    </header>
    <!-- Content -->
    <main class="main">
      <div class="error">
        <div class="error__title">
          <h2 class="heading-secondary heading-secondary--error">
            Uh oh! Something went wrong!
          </h2>
          <h2 class="error__emoji">ðŸ˜¢ ðŸ¤¯</h2>
        </div>
        <div class="error__msg"><%= msg %></div>
      </div>
    </main>
    <!-- Footer -->
    <%- include('_footer')%>
  </body>
</html>
